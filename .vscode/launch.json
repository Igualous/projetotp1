{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug CLI",
      "type": "cppdbg",
      "request": "launch",

      // executável da CLI
      "program": "${workspaceFolder}/output/cli.exe",

      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,

      "MIMode": "gdb",
      "miDebuggerPath": "gdb",

      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],

      // usa a task que compila cli.cpp + dominios + entidades + servicos_mem
      "preLaunchTask": "build cli"
    },
    {
      "name": "Debug main",
      "type": "cppdbg",
      "request": "launch",

      // executável da main de testes
      "program": "${workspaceFolder}/output/main.exe",

      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,

      "MIMode": "gdb",
      "miDebuggerPath": "gdb",

      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],

      // usa a task que compila main.cpp + dominios + entidades + servicos_mem
      "preLaunchTask": "build main"
    }
  ]
}
