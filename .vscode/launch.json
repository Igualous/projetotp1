{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            // ESTA É A LINHA QUE VOCÊ PRECISA MUDAR:
            "program": "${workspaceFolder}/projetotp1",
            
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            // Esta linha diz ao VS Code para compilar (rodar o tasks.json)
            // antes de tentar executar.
            "preLaunchTask": "Compilar Projeto C++ (g++)"
        }
    ]
}